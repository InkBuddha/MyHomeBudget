<% if @bills.any? %>
  <table id="bills" class="table table-bordered">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prix</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @bills.each do |bill| %>
        <tr>
          <td class="name"><%= bill.name %></td>
          <td class="price"><%= bill.price %> <span class="glyphicon glyphicon-euro" aria-hidden="true"></span></td>
          <td>
            <div class="btn-group" role="group">
              <%= link_to ('<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Voir').html_safe, bill, class: "btn btn-primary" %>
              <%= link_to ('<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editer').html_safe, edit_bill_path(bill), class: "btn btn-warning", remote: true %>
              <%= link_to ('<span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Supprimer').html_safe, bill, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-danger" %>
            </div>
          </td>
        </tr>
      <% end %>
        <tr>
          <td class="price">TOTAL</td>
          <td class="price"><%= @bills.sum(:price) %> <span class="glyphicon glyphicon-euro" aria-hidden="true"></span></td>
        </tr>
    </tbody>
  </table>
<% else %>
  <p>Aucune facture n'est renseign√©e pour le moment</p>
<% end %>

